<h1>Listar Locales</h1>

<table>
  <tr>
    <th>Nombre local</th>
    <th>Direccion</th>
    <th>Distrito</th>
    <th>Telefono</th>    
    <th></th>
    <th></th>
    <th></th>
    <th></th>    
  </tr>

<% @locals.each do |local| %>
  <tr>
    <td><%= local.name %></td>
    <td><%= local.address %></td>
    <td><%= local.zona %></td>    
    <td><%= local.phone %></td>
    <td><%= link_to 'Visualizar', local %></td>
    <% if current_user.rol < 2 %>
    <td><%= link_to 'Editar', edit_local_path(local) %></td>
    <td><%= link_to 'Eliminar', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'Regresar', home_path %>

