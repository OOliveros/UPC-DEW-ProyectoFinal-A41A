<h1>Nuevo Comentario</h1>

<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> registrar comentario:</h2>
      <ul>
        <% @comment.errors.each_with_index do |msg, i| %>
        <li><%= msg[1] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
   <div class="field">
    <%= f.label :Titulo %><br />
    <%= f.text_field :title %>
  </div>
   <div class="field">
    <%= f.label :Usuario_Tweeter %><br />
    <%= f.text_field :user %>
  </div>

   <div class="field">
    <%= f.label :Comentario %><br />
    <%= f.text_area :message %>
  </div>

   <div class="field">
    <%= f.label :ConciertoId %><br />
    <%= f.text_field :group_id, :value => @concert.id, :readonly => true %>
  </div>

  <div class="actions">
    <%= f.submit :Registrar %>
  </div>
<% end %>

<td><%= link_to 'Regresar', add_comment_comment_path(@concert) %></td>



