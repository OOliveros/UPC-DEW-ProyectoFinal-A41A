<h1>Listing concerts</h1>

<table>
  <tr>
    <th>Local</th>
    <th>Group</th>
    <th>Dateconcert</th>
    <th>Hourstart</th>
    <th>Hourend</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @concerts.each do |concert| %>
  <tr>
    <td><%= concert.local %></td>
    <td><%= concert.group %></td>
    <td><%= concert.dateconcert %></td>
    <td><%= concert.hourstart %></td>
    <td><%= concert.hourend %></td>
    <td><%= link_to 'Show', concert %></td>
    <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
    <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

