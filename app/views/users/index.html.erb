<h1>Listing users</h1>

<table>
  <tr>
    <th>Typeuser</th>
    <th>Name</th>
    <th>Lastname</th>
    <th>Secondlastname</th>
    <th>Sex</th>
    <th>Typedocument</th>
    <th>Document</th>
    <th>Email</th>
    <th>Password</th>
    <th>Email confirmation</th>
    <th>Password confirmation</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.typeuser %></td>
    <td><%= user.name %></td>
    <td><%= user.lastname %></td>
    <td><%= user.secondlastname %></td>
    <td><%= user.sex %></td>
    <td><%= user.typedocument %></td>
    <td><%= user.document %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= user.email_confirmation %></td>
    <td><%= user.password_confirmation %></td>
    <td><%= link_to 'Visualizar', user %></td>
    <td><%= link_to 'Editar', edit_user_path(user) %></td>
    <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>    
    <td><%= link_to 'Asistencia Concierto', add_concert_user_path(user) %></td> 
  </tr>
<% end %>
</table>

