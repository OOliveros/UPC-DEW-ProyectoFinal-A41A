<%= form_for(@local) do |f| %>
  <% if @local.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@local.errors.count, "error") %> prohibited this local from being saved:</h2>

      <ul>
        <% @local.errors.each_with_index do |msg, i| %>
        <li><%= msg[1] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Nombre_local %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Direccion %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :Distrito %><br />
    <%= f.select :zona, [ 'Ancón','Ate','Barranco' ,'Breña' ,'Carabayllo','Cercado de Lima','Chaclacayo','Chorrillos','Cieneguilla','Comas'                    ,'El Agustino'              ,'Independencia'            ,'Jesús María'              ,'La Molina'                ,'La Victoria'              ,'Lince'                    ,'Los Olivos'               ,'Lurigancho-Chosica'       ,'Lurín'                    ,'Magdalena del Mar'        ,'Pueblo Libre'             ,'Miraflores'               ,'Pachacámac'               ,'Pucusana'                 ,'Puente Piedra'            ,'Punta Hermosa'            ,'Punta Negra'              ,'Rímac'                    ,'San Bartolo'              ,'San Borja'                ,'San Isidro'               ,'San Juan de Lurigancho'   ,'San Juan de Miraflores'   ,'San Luis'                 ,'San Martín de Porres'     ,'San Miguel'               ,'Santa Anita'              ,'Santa María del Mar'      ,'Santa Rosa'               ,'Santiago de Surco'        ,'Surquillo'                ,'Villa El Salvador'        ,'Villa María del Triunfo'  ], :prompt => 'Selecciona uno' %>
  </div>
  <div class="field">
    <%= f.label :Longitud %><br />
    <%= f.text_field :longitude %>
  </div>
  <div class="field">
    <%= f.label :Latitud %><br />
    <%= f.text_field :latitude %>    
  </div>   
  <div class="field">
    <%= f.label :Telefono %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="actions">
    <%= f.submit :Registrar %>
  </div>
<% end %>
