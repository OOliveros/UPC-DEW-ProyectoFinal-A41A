<h1>Listing locals</h1>

<table>
  <tr>
    <th>Nombre_local</th>
    <th>Direccion</th>
    <th>Distrito</th>
    <th>Telefono</th>    
    <th></th>
    <th></th>
    <th></th>
    <th></th>    
  </tr>

<% @locals.each do |local| %>
  <tr>
    <td><%= local.name %></td>
    <td><%= local.address %></td>
    <td><%= local.zona %></td>    
    <td><%= local.phone %></td>
    <td><%= link_to 'Visualizar', local %></td>
    <td><%= link_to 'Editar', edit_local_path(local) %></td>
    <td><%= link_to 'Eliminar', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

